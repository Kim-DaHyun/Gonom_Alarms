<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGroupActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/Addgroup_activity_add_group_name"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="group이름"
            android:gravity="center"/>

        <TextView
            android:id="@+id/Addgroup_activity_add_group_friend_btn"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="#fef01b"
            android:gravity="center"
            android:text="친구추가"/>

        <ImageView
            android:id="@+id/Addgroup_activity_add_group_btn"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="60dp"
            android:scaleType="centerInside"
            android:src="@drawable/plus_button"
            android:contentDescription="TODO" />

    </LinearLayout>


</RelativeLayout>