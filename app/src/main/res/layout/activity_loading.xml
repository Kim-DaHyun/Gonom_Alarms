<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/loading_activity_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadingActivity">

    <ImageView
        android:id="@+id/loading_activity_title_image"
        android:rotation="-7"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/mainlogo_changeded"
        android:contentDescription="TODO" />

    <ImageView
        android:id="@+id/loading_activity_logo_image"
        android:layout_centerHorizontal="true"
        android:layout_width="400dp"
        android:layout_height="160dp"
        android:layout_marginTop="320dp"
        android:src="@drawable/logo_character"
        android:contentDescription="TODO" />
    <TextView
        android:id="@+id/loading_activity_company_title_text"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="440dp"
        android:text="@string/project_name"
        android:textSize="25sp"
        android:gravity="center"
        />
</RelativeLayout>